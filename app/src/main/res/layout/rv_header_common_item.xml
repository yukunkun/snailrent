<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="160dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/tool_app_ic"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:textColor="@color/color_2c2c2c"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_introduce"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:textColor="@color/color_eaffd9"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_cover"
        android:layout_below="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="5000"
            android:textColor="@color/color_fc2c5d"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_con"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="5000"
            android:textColor="@color/color_fc2c5d"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_con_tag"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="5000"
            android:textColor="@color/color_fc2c5d"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>