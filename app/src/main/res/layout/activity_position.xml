<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:sidebar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.matrix.yukun.matrix.activity.PositionActivity">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_e4e4e4"
        android:layout_gravity="center_vertical"
        android:layout_height="1dp"/>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_city"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
       <TextView
           android:gravity="center"
           android:textSize="14sp"
           android:text="GPS定位"
           android:layout_marginLeft="6dp"
           android:layout_toRightOf="@+id/tv_city"
           android:textColor="@color/color_8a8a8a"
           android:layout_width="wrap_content"
           android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_click_position"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="获取定位"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_e4e4e4"
        android:layout_gravity="center_vertical"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView android:layout_width="match_parent"
            android:id="@+id/lv_list"
            android:layout_height="match_parent">
        </ListView>
            <com.matrix.yukun.matrix.selfview.SideBar
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:paddingRight="10dp"
                sidebar:scaleTime="1"
                android:layout_width="200dp"
                android:id="@+id/bar"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
