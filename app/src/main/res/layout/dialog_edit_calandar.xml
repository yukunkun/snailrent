<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_whit"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:background="@color/color_b1697ffa"
            android:gravity="center"
            android:text="日程"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="添加"
            android:id="@+id/tv_add_con"
            android:background="@drawable/shape_add_calandar"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/color_whit"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="10dp"
            android:background="@drawable/shape_calandar_left_color"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_categray"
            android:text="分类"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/color_2c2c2c"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_categray"
            android:layout_toRightOf="@+id/tv_categray"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="填写分类"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_search_bg"
            android:layout_marginRight="20dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="10dp"
            android:background="@drawable/shape_calandar_left_color_blue"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_time"
            android:text="时间"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/color_2c2c2c"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_real_time"
            android:text=""
            android:layout_toRightOf="@+id/tv_time"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/color_8a8a8a"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_time"
            android:layout_toRightOf="@+id/tv_real_time"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="填写时间"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_search_bg"
            android:layout_marginRight="20dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="10dp"
            android:background="@drawable/shape_calandar_left_color_yello"
            android:layout_height="match_parent" />
        <TextView
            android:text="地点"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/color_2c2c2c"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_please" />
        <EditText
            android:id="@+id/et_please"
            android:layout_toRightOf="@+id/tv_please"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="填写地点"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_search_bg"
            android:layout_marginRight="20dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="10dp"
            android:background="@drawable/shape_calandar_left_color_green"
            android:layout_height="match_parent" />
        <TextView
            android:text="日程"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/color_2c2c2c"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:hint="填写日程"
        android:gravity="start"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_calandar_con"
        android:layout_marginRight="20dp"
        android:layout_height="140dp" />
</LinearLayout>